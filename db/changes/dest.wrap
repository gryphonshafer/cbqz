#!/usr/bin/env perl
use exact;
use Config::App;

my ( $name, $host, $port, $username, $password ) = @{ Config::App->new->get('database') }{ qw(
    name host port username password
) };

system(
    qq{/usr/bin/env cat $ARGV[0] | } .
    qq{/usr/bin/env mysql --skip-column-names -h'$host' -P$port -u$username -p'$password' $name}
);
